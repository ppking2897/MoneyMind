<?xml version="1.0" encoding="utf-8"?>
<!--
   Backup rules for API 31+
   See https://developer.android.com/about/versions/12/backup-restore#xml-changes
-->
<data-extraction-rules>
    <cloud-backup>
        <!-- Exclude database to allow fresh seed data on reinstall -->
        <exclude domain="database" path="moneymind_database" />
        <exclude domain="database" path="moneymind_database-shm" />
        <exclude domain="database" path="moneymind_database-wal" />
    </cloud-backup>
    <device-transfer>
        <!-- Allow database transfer between devices -->
        <include domain="database" path="moneymind_database" />
    </device-transfer>
</data-extraction-rules>